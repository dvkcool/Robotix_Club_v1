<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.robotixnitrr.robotix_club_v1.News_desc"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <TextView
        android:id="@+id/news_name"
        android:layout_width="240dp"
        android:layout_height="27dp"
        android:textStyle="bold"
        android:layout_marginStart="27dp"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_marginRight="119dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="119dp" />

    <EditText
        android:id="@+id/news_descr"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="359dp"
        android:layout_height="263dp"
        android:textColor="@color/colorAccent"
        android:ems="10"
        android:scrollbars = "vertical"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="24dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/news_imagevi" />

    <WebView
        android:id="@+id/news_imagevi"
        android:layout_width="365dp"
        android:layout_height="229dp"

        android:layout_marginEnd="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/news_name"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="73dp"
        tools:layout_editor_absoluteX="11dp" />

</android.support.constraint.ConstraintLayout>
